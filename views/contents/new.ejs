<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Content</h1>
    <div class="col-6 offset-3">
        <form action="/contents" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="content[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="content[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="story">Story</label>
                <textarea class="form-control" type="text" id="description" name="content[story]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">

                <button class="btn btn-success" >Add Content</button>
            </div>
        </form>
        <a href="/contents">All Content</a>
    </div>
</div>

